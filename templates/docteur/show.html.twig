{% extends 'base.html.twig' %}

{% block title %}Détails du Docteur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0"><i class="fas fa-user-md"></i> Détails du Docteur</h2>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <tbody>
                        <tr>
                            <th class="bg-light">ID</th>
                            <td>{{ docteur.id }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Email</th>
                            <td>{{ docteur.email }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Rôles</th>
                            <td>
                                {% for role in docteur.roles %}
                                    <span class="badge bg-info text-dark">{{ role }}</span>
                                {% endfor %}
                            </td>
                        </tr>
                        
                        <tr>
                            <th class="bg-light">Prénom</th>
                            <td>{{ docteur.firstName }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Nom</th>
                            <td>{{ docteur.lastName }}</td>
                        </tr>
                       
                        
                        <tr>
                            <th class="bg-light">Spécialité</th>
                            <td>{{ docteur.specialty }}</td>
                        </tr>
                        
                        <tr>
                            <th class="bg-light">Ville</th>
                            <td>{{ docteur.city }}</td>
                        </tr>
                    </tbody>
                </table>

               <div class="mt-4 d-flex justify-content-center gap-3">
    <a href="{{ path('app_docteur_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>

    <a href="{{ path('app_docteur_edit', {'id': docteur.id}) }}" class="btn btn-warning">
        <i class="fas fa-edit"></i> Modifier
    </a>

    {{ include('docteur/_delete_form.html.twig') }}
</div>

            </div>
        </div>
    </div>
{% endblock %}
