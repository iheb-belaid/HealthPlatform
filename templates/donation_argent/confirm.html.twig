{% extends 'base.html.twig' %}

{% block title %}Confirmation du Don{% endblock %}

{% block body %}
    <h1>Merci pour votre don !</h1>
    <p>Montant : {{ donation.montant }} â‚¬</p> {# Utilisation correcte #}

    <button id="checkout-button" class="btn btn-primary">Payer avec Stripe</button>

    <script src="https://js.stripe.com/v3/"></script>
    <script>
        var stripe = Stripe("{{ stripe_public_key }}");
        var checkoutButton = document.getElementById("checkout-button");

        checkoutButton.addEventListener("click", function () {
            fetch("{{ path('stripe_payment', { donationId: donation.id }) }}", {
                method: "GET",
                headers: { "Content-Type": "application/json" },
            })
            .then(response => response.json())
            .then(session => {
                return stripe.redirectToCheckout({ sessionId: session.id });
            })
            .then(result => {
                if (result.error) {
                    alert(result.error.message);
                }
            })
            .catch(error => console.error("Erreur:", error));
        });
    </script>
{% endblock %}

