{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réclamation{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="hero-section" style="background: url('https://www.autoroutes.sanef.com/sites/default/files/2022-11/contacts2.png') no-repeat center center; background-size: cover; height: 40vh;">
        <div class="container h-100 d-flex align-items-center">
            <div class="text-white text-center">
                <h1 class="display-4"></h1>
                <p class="lead"></p>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h2 class="card-title text-center mb-0">
                            <i class="fas fa-exclamation-circle"></i> Formulaire de Réclamation
                        </h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            
                            <!-- Titre Field -->
                            <div class="form-group mt-3">
                                <label for="reclamation_titre" class="form-label">
                                    <i class="fas fa-heading"></i> Titre :
                                </label>
                                {{ form_widget(form.titre, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'reclamation_titre',
                                        'placeholder': 'Entrez le titre de votre réclamation'
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.titre) }}
                                </div>
                            </div>

                            <!-- Description Field -->
                            <div class="form-group mt-3">
                                <label for="reclamation_description" class="form-label">
                                    <i class="fas fa-align-left"></i> Description :
                                </label>
                                {{ form_widget(form.description, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'reclamation_description',
                                        'placeholder': 'Décrivez votre réclamation en détail',
                                        'rows': 5
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>

                           

                            <!-- Submit Button -->
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane"></i> Soumettre
                                </button>
                                 <a href="{{ path('app_consultation_index') }}" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-arrow-left"></i> Retour à la liste
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom CSS -->
    <style>
        .hero-section {
            position: relative;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        .card {
            border: none;
            border-radius: 15px;
        }
        .card-header {
            border-radius: 15px 15px 0 0;
        }
        .btn-primary {
            background-color: #2575fc;
            border-color: #2575fc;
        }
        .btn-primary:hover {
            background-color: #1a5bbf;
            border-color: #1a5bbf;
        }
        .btn-secondary {
            background-color: rgb(246, 7, 7);
            border-color: rgb(246, 7, 7);
        }
        .btn-secondary:hover {
            background-color: rgb(200, 0, 0);
            border-color: rgb(200, 0, 0);
        }
    </style>

    <!-- Validation Script -->
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
{% endblock %}